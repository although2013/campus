<header class="container-fluid">

<nav class="navbar navbar-default">

  <!--div class="container-fluid"-->

    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">CapsOrds</a>
    </div>


    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li <%= "class=active" if params[:controller] == 'orders' && params[:action] == 'index' %> >
          <%= link_to '浏览', orders_path %>
        </li>
        <li <%= "class=active" if params[:controller] == 'orders' && params[:action] == 'new' %> >
          <%= link_to '发布任务', new_order_path %>
        </li>
      </ul>


      <%= form_tag search_orders_path, :method => 'post', :class => "navbar-form navbar-left search-form" do %>
        <div class="form-group">
          <%= text_field_tag :search, params[:search], :id => 'search_field', class:"form-control q_str", placeholder:"搜索目的地或任务标题" %>
        </div>
        <%= button_tag(type: 'submit', class:"btn btn-default search") do %>
          查找 <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
        <% end %>

      <% end %>

      <ul class="nav navbar-nav navbar-right">
        <% if !signed_in? %>
          <li><%= link_to '登录', new_session_path %></li>
        <% else %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><%= current_user.name %> <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to '我的空间', current_user %></li>
              <li><%= link_to '修改资料', edit_user_path(current_user) %></li>

              <li class="divider"></li>
              <li><%= link_to '退出登录', session_path(current_user), method:'delete' %></li>
            </ul>
          </li>
        <% end %>
      </ul>
    </div>


</nav>
</header>
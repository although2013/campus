<div class="new-order">
<h2>发布商品</h2>
</br>

<%= form_for(@order) do |f| %>

      <%= f.label '标题' %>
      <%= f.text_field :title, autofocus: true, placeholder:"任务的标题", class:"form-control" %>
    
  
      <%= f.label '详细' %>
      <%= f.text_area :content, placeholder:"具体描述任务", class:"form-control" %>
    
  
      <%= f.label '时间' %>
      <%= f.text_field :deadline, placeholder:"", class:"form-control" %>

      <%= f.label '位置' %>
      <%= f.text_field :location, placeholder:"需要送达何处", class:"form-control" %>

      <%= f.label '电话' %>
      <%= f.text_field :phone, placeholder:"电话号码", class:"form-control" %>

      <%= f.label '总价' %>
      <%= f.text_field :total, placeholder:"您付给接单员的总金额", class:"form-control" %>
    
  

  <br />

  <%= f.submit "发 布", class: "btn btn-large btn-primary" %>

<% end %>

</div>
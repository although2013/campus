<% [:success, :info, :warning, :danger, :alert, :notice].each do |type| %>
  <% if flash[type] %>
    <% if type == 'notice' %>
      <div class="alert alert-info radius">
    <% else %>
      <div class="alert alert-<%= type %> radius">
    <% end %>
        <%= flash[type] %>
        <a href="#" class="close">&times;</a>
      </div>
  <% end %>
<% end %>
